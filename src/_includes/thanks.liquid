<section class="o-section || o-sticky-wrap" data-scroll-section>
	<div class="o-container -small">
		<span class="o-sticky" id="stop-sticky-thanks-line"></span>
		<div class="o-section-line-wrap" data-scroll data-scroll-offset="35%">
			<div class="o-section-line" data-scroll data-scroll-sticky data-scroll-target="#stop-sticky-thanks-line">
				<div class="o-section-line_inner"></div>
			</div>
		</div>

		<div class="o-section_inner || o-sticky-wrap">
			<span class="o-sticky" id="stop-sticky-thanks"></span>
			<div class="o-layout -gutter-small">
				<div class="o-layout_item u-1/3@from-small u-1/2@from-medium">
					<div class="c-sidebar-card" data-scroll data-scroll-offset="25%">
						<h1 class="c-heading -h3 || o-title" data-scroll data-scroll-delay="0.7" data-scroll-sticky data-scroll-target="#stop-sticky-thanks">
							<div>
								{{ thanks.title }}
							</div>
						</h1>
					</div>
				</div>
				<div class="o-layout_item u-2/3@from-small u-1/2@from-medium">
					{{ thanks.image }}
				</div>
			</div>
		</div>
	</div>
</section>
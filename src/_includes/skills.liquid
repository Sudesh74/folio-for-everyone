<section class="o-section || o-sticky-wrap" data-scroll-section>
	<div class="o-container -small">
		<span class="o-sticky" id="stop-sticky-skills-line"></span>
		<div class="o-section-line-wrap" data-scroll data-scroll-offset="35%">
			<div class="o-section-line" data-scroll data-scroll-sticky data-scroll-target="#stop-sticky-skills-line">
				<div class="o-section-line_inner"></div>
			</div>
		</div>

		<div class="o-section_inner || o-sticky-wrap">
			<span class="o-sticky" id="stop-sticky-skills"></span>
			<div class="o-layout -gutter-small">
				<div class="o-layout_item u-1/3@from-small u-1/2@from-medium">
					<div class="c-sidebar-card" data-scroll data-scroll-offset="25%">
						<h1 class="c-heading -h3 || o-title" data-scroll data-scroll-delay="0.7" data-scroll-sticky data-scroll-target="#stop-sticky-skills">
							<div>
								{{ skills.title }}
							</div>
						</h1>
					</div>
				</div>
				<div class="o-layout_item u-2/3@from-small u-1/2@from-medium">
					{% if skills %}
					<ul class="o-layout -gutter-small || c-collection">
						{%- for category in skills.category -%}
						<li class="o-layout_item u-1/2@from-small || c-collection_item">
							<article class="c-skills-card" data-scroll data-scroll-speed="{{ forloop.index | divided_by: -3 }}">
								{% if category.title %}
									<div class="c-skills-card_title-wrap" data-scroll data-scroll-offset="{{ forloop.index | times: 6 | plus: 35 }}%">
										<h1 class="c-skills-card_title">{{ category.title }}</h1>
									</div>
								{% endif %}
								<ul class="c-skills-card_list">
									{%- for tools in category.tools -%}
									<li
										class="c-skills-card_item -delay-{{ forloop.index }}"
										data-scroll data-scroll-offset="25%"
									>
										<span>
											{{ tools.name }}
										</span>
									</li>
									{%- endfor -%}
								</ul>
							</article>
						</li>
						{%- endfor -%}
					</ul>
					{% endif %}
				</div>
			</div>
		</div>
	</div>
</section>